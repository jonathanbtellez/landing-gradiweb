    <h1 class="collection__title collection__title--mobile">COLLECTION</h1>
  </div>
  <div class="collection-items">
    {% comment %} 
      The following code will filter the collections based on the creation date. 
      The collections that were created before the filter date will be skipped.
    {% endcomment %}
    {% assign filter_date = settings['featured-collection'].settings.filter.created_at %}
    {% for collection in collections %}
      {% assign collection_creation_date = collection.created_at | date: '%Y-%m-%d' %}
      {% if collection_creation_date < filter_date %}
        {% continue %}
      {% endif %}
      <div style="collection--active">
        <a href="{{ collection.url }}">
          <div
            class="collection-items__image"
            style="--background-image: url({{'/assets/imgs/' |  append: collection.image |  asset_url}})"
          >
            <p class="collection-items__title">
              {{ collection.title }}
            </p>
          </div>
        </a>
      </div>
    {% endfor %}
  </div>
</section>
